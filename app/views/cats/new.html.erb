<div class="text-center">
  <h1>マイネコプロフィール</h1>
</div>


<div class="row">
  
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @cat, local:true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :birthday, '生年月日' %>
        <%= f.date_field :birthday, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :variety, '猫種' %>
        <%= f.text_field :variety, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :contents, 'かわいいポイント' %>
        <%= f.text_area :contents, class: 'form-control' %>
      </div>
      
      <div class="field">
        <%= f.label :image, 'マイネコ写真：' %>
        <%= f.file_field :image %>
      </div>
      
      <div class="mt-3">
        <%=  f.submit '登録', class: 'btn btn-primary btn-block' %>
      </div>
       
    <% end %>
  </div>
</div>
